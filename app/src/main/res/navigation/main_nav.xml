<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.veganfood.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_cart2"
            app:destination="@id/cartPage" />
        <action
            android:id="@+id/action_mainFragment_to_menu2"
            app:destination="@id/menuPage" />
    </fragment>
    <fragment
        android:id="@+id/cartPage"
        android:name="com.example.veganfood.fragments.Cart"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/menuPage"
        android:name="com.example.veganfood.fragments.Menu"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" />
</navigation>